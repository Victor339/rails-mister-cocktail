<div class="container">


  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-row">
    <h2>Ingredient</h2>
    <%= f.input :ingredient_id, label: false, collection: @ingredients %>
  </div>
  <div class="form-row">
    <%= f.input :description, label: false  %>
  </div>
    <%= f.submit "Add dose"%>
  <% end %>
  <h2><%= link_to "Back to cocktail list", cocktails_path %></h2>

   <% @cocktail.doses.each do |dose|  %>
    <p><%= dose.ingredient.name %> : <%= dose.description %> | <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>
    <%= link_to 'Back', cocktails_path %>
</div>



